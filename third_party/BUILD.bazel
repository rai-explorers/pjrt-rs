load("@xla//xla/tsl:tsl.bzl", "transitive_hdrs")

transitive_hdrs(
  name = "pjrt_c_api_hdrs",
  deps = [
    "@xla//xla/pjrt/c:pjrt_c_api_hdrs",
  ]
)
genrule(
  name = "pjrt_headers",
  srcs = [
    ":pjrt_c_api_hdrs",
  ],
  outs = ["pjrt_headers.tar"],
  cmd = """
    TMP_DIR=$$(mktemp -d)
    for f in $(SRCS); do
      d="$${f%/*}"
      if [[ $${d} == external* ]]; then
        extname="$${d#*external/}"
        extname="$${extname%%/*}"
        d="$${d#*external/$${extname}/}"
      fi      
      mkdir -p "$${TMP_DIR}/$${d}"
      cp "$${f}" "$${TMP_DIR}/$${d}/"
    done
    tar -C "$${TMP_DIR}" -cf $@ .
    """,
)

